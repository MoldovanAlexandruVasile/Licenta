<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Enter data:"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="513dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="30dp"
            android:layout_height="33dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/imageView3"
            app:srcCompat="@drawable/water" />

        <TextView
            android:id="@+id/watertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="59dp"
            android:text="Water:"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/waterUserTextInput"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/sendResourcesButton"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/watertext"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="70dp"
            android:text="@string/cubicMetter"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignStart="@+id/imageView3"
            android:layout_alignTop="@+id/gastext"
            app:srcCompat="@drawable/fire" />

        <TextView
            android:id="@+id/gastext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/watertext"
            android:layout_marginTop="54dp"
            android:text="Gas:"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/gasUserTextInput"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/waterUserTextInput"
            android:layout_alignTop="@+id/gastext"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/gastext"
            android:layout_alignStart="@+id/textView14"
            android:text="@string/cubicMetter"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="32dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/electricitytext"
            android:layout_marginStart="18dp"
            app:srcCompat="@drawable/electricity" />

        <TextView
            android:id="@+id/electricitytext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/watertext"
            android:layout_marginTop="110dp"
            android:text="Electricity:"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/electricityUserTextInput"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/waterUserTextInput"
            android:layout_alignTop="@+id/electricitytext"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/electricitytext"
            android:layout_alignStart="@+id/textView15"
            android:text="kW"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/noOfPplTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/imageView5"
            android:layout_marginTop="172dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="showNoOfPplInfo"
            android:text="Number of people*:"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

        <Spinner
            android:id="@+id/numberPersonsSpinner"
            android:layout_width="46dp"
            android:layout_height="32dp"
            android:layout_alignEnd="@+id/textView11"
            android:layout_alignTop="@+id/noOfPplTextView"
            android:layout_marginEnd="10dp"
            android:background="@color/white" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="67dp"
            android:layout_height="44dp"
            android:layout_alignBottom="@+id/noOfPplTextView"
            android:layout_marginBottom="-6dp"
            android:layout_toEndOf="@+id/textView11"
            app:srcCompat="@drawable/family" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="26dp"
            android:text="Extra costs you will pay:"
            android:textColor="@android:color/darker_gray"
            android:textSize="26sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="194dp"
            android:layout_toEndOf="@+id/gastext"
            android:text="Cleaning*:"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="showCleaningInfo"/>

        <TextView
            android:id="@+id/cleaningCostUser"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView11"
            android:layout_alignTop="@+id/textView12"
            android:text="0"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="158dp"
            android:layout_toEndOf="@+id/gastext"
            android:text="Reparations*:"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="showReparationsInfo"/>

        <TextView
            android:id="@+id/reparationCostUser"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView11"
            android:layout_alignTop="@+id/textView13"
            android:text="0"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/garageCostUser"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/cleaningCostUser"
            android:layout_alignTop="@+id/textView3"
            android:text="0"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="124dp"
            android:layout_toEndOf="@+id/gastext"
            android:text="Garage*"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="showGarageCareInfo"/>

        <Button
            android:id="@+id/sendResourcesButton"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp"
            android:background="@color/lightBlue"
            android:text="Send resources"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

    </RelativeLayout>

</RelativeLayout>