<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="325dp"
        android:layout_height="375dp"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="#2A3c58"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="326dp"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="25dp">


            <TextView
                android:id="@+id/textView33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/textView25"
                android:text="Send the following data?"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/yesConfirmPopUpCardView"
                android:layout_marginTop="36dp"
                android:text="Electricity:"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/confirmElectricityPopUpTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/noConfirmPopUpCardView"
                android:layout_alignTop="@+id/textView25"
                android:text="TBD"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/noConfirmPopUpCardView"
                android:layout_alignTop="@+id/textView25"
                android:text="@string/kw"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/textView25"
                android:layout_marginTop="85dp"
                android:text="Gas:"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/confirmGasPopUpTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/confirmElectricityPopUpTextView"
                android:layout_alignTop="@+id/textView28"
                android:text="TBD"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView29"
                android:layout_alignTop="@+id/textView28"
                android:text="@string/cubicMetter"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/textView25"
                android:layout_marginTop="131dp"
                android:text="Water:"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/confirmWaterPopUpTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/confirmElectricityPopUpTextView"
                android:layout_alignTop="@+id/textview"
                android:text="TBD"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView29"
                android:layout_alignTop="@+id/textview"
                android:text="@string/cubicMetter"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/textView25"
                android:layout_marginTop="180dp"
                android:text="People:"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/confirmPeoplePopUpTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/confirmElectricityPopUpTextView"
                android:layout_alignTop="@+id/textView27"
                android:text="TBD"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <android.support.v7.widget.CardView
                android:id="@+id/yesConfirmPopUpCardView"
                android:layout_width="122dp"
                android:layout_height="41dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="30dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Yes"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/noConfirmPopUpCardView"
                android:layout_width="122dp"
                android:layout_height="41dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/yesConfirmPopUpCardView"
                android:layout_marginEnd="30dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="No"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>