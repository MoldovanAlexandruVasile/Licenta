<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <TextView
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_action_back_black"
        android:focusable="true"
        android:onClick="goBackToResource"
        android:text="Back"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <android.support.v7.widget.CardView
        android:layout_width="353dp"
        android:layout_height="184dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/noOfPplTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="11dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="showNoOfPplInfo"
                android:text="Number of people*:"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <Spinner
                android:id="@+id/numberPersonsSpinner"
                android:layout_width="46dp"
                android:layout_height="32dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="22dp"
                android:layout_marginStart="40dp"
                android:background="@color/gray"
                android:popupBackground="@color/gray" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="52dp"
                android:layout_height="53dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="97dp"
                app:srcCompat="@drawable/family" />

            <Spinner
                android:id="@+id/monthSpinner"
                android:layout_width="108dp"
                android:layout_height="24dp"
                android:layout_alignBottom="@+id/numberPersonsSpinner"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="29dp"
                android:background="@color/gray"
                android:popupBackground="@color/gray"
                android:spinnerMode="dialog" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="337dp"
        android:layout_height="233dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textView11"
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:text="Extra costs you will pay:"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/textView13"
                android:layout_marginBottom="58dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="showCleaningInfo"
                android:text="Cleaning*:"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/cleaningCostUser"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/reparationCostUser"
                android:layout_alignTop="@+id/textView12"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="94dp"
                android:layout_marginStart="39dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="showReparationsInfo"
                android:text="Reparations*:"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/reparationCostUser"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/textView13"
                android:layout_marginEnd="36dp"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/garageCostUser"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/cleaningCostUser"
                android:layout_alignTop="@+id/textView3"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/textView12"
                android:layout_marginBottom="24dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="showGarageCareInfo"
                android:text="Garage*"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/sendReportBtn"
        android:layout_width="255dp"
        android:layout_height="41dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="217dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Send report"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>