<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:padding="20dp"
    android:paddingStart="0dp">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="86dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        app:srcCompat="@drawable/resource_apartment_icon" />

    <RelativeLayout
        android:id="@+id/first"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Apartment number:"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/apartmentNumberCustomLayoutTextViewAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="39dp"
            android:text="TBD"
            android:textColor="@android:color/black" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="223dp"
        android:layout_height="22dp"
        android:layout_alignBottom="@+id/imageView11"
        android:layout_alignStart="@+id/first"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="Owner:"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/apartmentOwnerCustomLayoutTextViewAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="79dp"
            android:text="TBD"
            android:textColor="@android:color/black" />
    </RelativeLayout>

</RelativeLayout>